        <p class="lead">@Html.ActionLink("Extinct", "SCategory", "Species", new { searchTerms = "EX" })  |  @Html.ActionLink("Extinct in the wild", "SCategory", "Species", new { searchTerms = "EW" })  |  @Html.ActionLink("Critically Endangered", "SCategory", "Species", new { searchTerms = "CR" })  |  @Html.ActionLink("Endangered", "SCategory", "Species", new { searchTerms = "EN" })  |  @Html.ActionLink("Vulnerable", "SCategory", "Species", new { searchTerms = "VU" })</p>
        <p class="lead">
            @if (!string.IsNullOrEmpty(letters))
            {
                foreach (var c in letters)
                {
                    @Html.ActionLink(c.ToString().ToUpper(), "SpeciesIndex", new { searchTerms = c.ToString() })

                    @: &nbsp;
                }
            }
            </p>
    </div>
</div>



