@section scripts{
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script>
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Region');
            data.addColumn('number', 'Species Percentage');
            data.addRows([
                ['Northern Africa', { v: 360, f: '0,36%' }], // 
                ['Northeastern Africa', { v: 305, f: '0,31%' }] //
                ['Eastern Africa', { v: 1604, f: '35%' }], //countok, ei laskettu
                ['Western Africa', { v: 977, f: '8%' }] //count ok, ei laskettu
                ['Central Africa', { v: 1964, f: '8%' }] //count ok, ei laskettu
                ['Pan-Africa', { v: 5123, f: '8%' }] //count ok, ei laskettu
                ['Persian Gulf', { v: 471, f: '15%' }], //count ok, ei laskettu
                ['Europe', { v: 13456, f: '12%' }], //count ok, ei laskettu
                ['Mediterranean', { v: 4709, f: '8%' }] //count ok, ei laskettu
                ['Gulf of Mexico', { v: 940, f: '8%' }] //count ok, ei laskettu
                ['Others', { v: 69422, f: '8%' }] //KAIKKI!! ei laskettu

            ]);

            // Simple Pie Chart:
            var option = {
                title: 'Regional species count in available regions',
                width: 500,
                height: 400
            };

            var chart = new google.visualization.PieChart(document.getElementById('chart1'));
            chart.draw(data, option);

            //3D Pie Chart:
            option.is3D = true;
            chart = new google.visualization.PieChart(document.getElementById('chart2'));
            chart.draw(data, option);

        }
    </script>
}




